    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "Username"
        android:id="@+id/chat_username"
        android:textColor="@android:color/black"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/seen_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_done_black_24dp"
            android:layout_gravity="bottom"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chat_message"
        android:background="@drawable/chat_rounder_rect_me_bg"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/holo_red_dark"
        tools:text="hello!"
        android:padding="8dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/chat_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/ic_notifications_black_24dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:text="@string/download_attachment"
        android:id="@+id/download_attachments_button"
        android:visibility="invisible"
        tools:visibility="visible"/>

</LinearLayout>